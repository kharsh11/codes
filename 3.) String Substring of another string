#include <bits/stdc++.h>
using namespace std;

int Substring(string s1, string s2)
{
    int i,j,k;

    int M = s1.length();
    int N = s2.length();


    for ( i = 0; i <= N - M ; i++) {
        k=i;

        for (j = 0; j < M; j++){
            if (s2[k] != s1[j])
                break;
            k++;
        }
        if (j == M)
            return i;
    }

    return -1;
}

int main()
{
    int res = Substring("rsh", "Harsh");
    if (res == -1)
        cout << "Not present";
    else
        cout << "Present at index " << res;
    return 0;
}


output: present at index 2


